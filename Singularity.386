Bootstrap: docker pull i386/ubuntu
From: ubuntu-trusty

%post
    apt-get -y update
    apt-get -y install wget
    apt-get -y install gawk
    apt-get -y install apt-transport-https

# Intalling Fortran also gives us C.    
    apt install -y gfortran
# Installing g++ make installing openmpi easier
    apt install -y g++
    apt install -y make
date

# Install editors
  apt install -y nano
  apt install -y vim


%environment
    export LC_ALL=C

